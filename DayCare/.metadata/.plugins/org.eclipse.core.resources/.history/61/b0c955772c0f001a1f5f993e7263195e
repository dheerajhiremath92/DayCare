    private void TrackAnnualRegistrationActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_TrackAnnualRegistrationActionPerformed
        DefaultTableModel model = (DefaultTableModel)jTable3.getModel();
        List<String> studentData = controller.getEnrollmentStatus(controller);
        for(String data: studentData){
            String line = data.toString().trim();
                String[] dataRow = line.split(",");
                model.addRow(dataRow);
            
        }
        // TODO add your handling code here:
    }//GEN-LAST:event_TrackAnnualRegistrationActionPerformed

